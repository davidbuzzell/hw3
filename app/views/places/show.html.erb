<!-- Place details page -->

<h1><%= @place["name"] %></h1>
<br />

<% for entry in @entries %>
  <h2><%= entry["title"] %></h2>
  <p><%= entry["occurred_on"] %></p>
  <p><%= entry["description"] %></p>
  <br />
<% end %>

<p>
  <a href="/entries/new?place_id=<%= @place["id"] %>">New Entry</a>
</p>

<p>
  <a href="/places"><b>Back to All Places</b></a>
</p>

<form action="/places/<%= @place["id"] %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <button>Delete Place</button>
</form>